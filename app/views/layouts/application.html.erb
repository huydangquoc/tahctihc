<!DOCTYPE html>
<html>
  <head>
    <title>Tahctihc</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <nav class="navbar navbar-dark bg-inverse">
      <a class="navbar-brand" href="/">
        Top Secret
      </a>
      <ul class="nav navbar-nav">
        <% if current_user %>
          <li class="nav-item ">
            <%= link_to 'Inbox', messages_path, class: 'nav-link' %>
          </li>
          <li class="nav-item ">
            <%= link_to 'Sent', sent_messages_path , class: 'nav-link' %>
          </li>
          <li class="nav-item ">
            <%= link_to 'New Message', new_message_path, class: 'nav-link' %>
          </li>
          <li class="nav-item ">
            <%= link_to 'Add Friend', new_friendship_path , class: 'nav-link' %>
          </li>
          <li class="nav-item ">
            <%= link_to 'My Friend', friendships_path , class: 'nav-link' %>
          </li>
          <li class="nav-item pull-xs-right">
            <%= link_to "Log out #{current_user.name}", logout_path, method: 'delete', class: 'nav-link' %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Create an Account", new_user_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to "Log in", new_session_path, class: 'nav-link' %>
          </li>
        <% end %>
      </ul>
    </nav>
    <% if flash.any? %>
      <% flash.each do |key, value| %>
        <div class="alert <%= flash_class_name(key) %>"><%= value %></div>
      <% end %>
    <% end %>
    <br>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>