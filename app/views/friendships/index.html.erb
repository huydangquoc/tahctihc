<div class="row">
  <div class="col-xs-6">
    <h3>Your total friends (<%= @friends.count %>)</h3>
  </div>
  <div class="col-xs-6">
    <%= link_to "Add more friends >>", new_friendship_path, class: 'btn btn-primary pull-xs-right' %>
  </div>
</div>
<table class="table">
  <thead>
    <tr>
      <td>Name</td>
      <td>Email</td>
      <td></td>
    </tr>
  </thead>
  <tbody>
    <%= render partial: "friend", collection: @friends %>
  </tbody>
</table>