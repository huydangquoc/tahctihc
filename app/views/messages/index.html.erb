<h1>Inbox</h1>
<table class="table">
  <thead class="thead-inverse">
    <tr>
      <th>From</th>
      <th>Sent at</th>
      <th>Read at</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @messages.each do |message| %>
      <tr class="<%= message.read?? "" : "table-info" %>">
        <td><%= message.sender.name %></td>
        <td><%= message.created_at.strftime("%d %b  %Y at %I:%M%p")%></td>
        <td>
          <% if message.read_at %>
            <%= time_ago_in_words(message.read_at)%> ago
          <% end %>
        </td>
        <td>
          <% if !message.read? %>
            <%= link_to 'Read Now',message_path(message), class: 'btn btn-primary'  %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>