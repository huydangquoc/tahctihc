<h1>New Message</h1>
<%= form_for(@message, url: {action: "create"}) do |f| %>
  <% unless @message.errors.empty? %>
    <div class='alert alert-danger'>
      <% @message.errors.full_messages.each do |err_msg| %>
        <li><%= err_msg %></li>
      <% end %>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label "Send to", class: 'form-control-label' %>
    <br>
    <%= f.select(:recipient_id) do %>
      <% @users.each do |user| %>
        <%= content_tag(:option, "#{user.name} (#{user.email})", value: user.id) %>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <%= f.label :body, class: 'form-control-label' %>
    <%= f.text_area :body, class: 'form-control' %>
  </div>
  <%= f.button 'Send', class: 'btn btn-primary' %>
<% end %>