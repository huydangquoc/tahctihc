<h4 class='message-heading'>Message Content</h4>
<div class="col-xs-4">
  <div class="card">
    <div class="card-header">
      <h3 class="card-title"><%= @message.sender.name %></h3>
    </div>
    <div class="card-block">
      <p class="card-text"><%= @message.body %></p>
      <p class="card-text">
        <i class="pull-xs-right">Sent at: <%= @message.created_at.strftime("%d %b  %Y at %I:%M%p") %></i>
      </p>
    </div>
    <div class="card-footer">
      <%= link_to 'Back', messages_path, class: 'btn btn-danger' %>
    </div>
  </div>
</div>